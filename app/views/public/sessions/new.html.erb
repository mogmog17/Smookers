<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h2 class="mt-5 mb-5">
        <i class="fas fa-user"></i>
        ログイン
      </h2>

      <%= form_with model: @user, url: user_session_path do |f| %>
        <div class="mb-4">
          <%= f.label :"メールアドレス", class: "email col-3" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-5" %>
        </div>

        <div class="mb-4">
          <%= f.label :"パスワード", class: "password col-3" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-md-4" %>
        </div>

        <div class="row mt-5 mb-4">
          <%= f.submit "ログイン", class: "btn btn-outline-success rounded-pill col-5 mx-auto" %>
        </div>
      <% end %>

      <div>
        <h6><%= link_to "登録がお済みでない方はこちら", new_user_registration_path %></h6>
      </div>
    </div>
  </div>
</div>
