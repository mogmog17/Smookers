<div class="container">
  <div class="row">
    <h1 class="mt-4">投稿詳細</h1>
    <%= link_to @post.user do %>
      <%= image_tag @post.user.get_profile_image(200, 200), class: "rounded-circle" %>
    <% end %>
    <%= @post.user.username %>
    <%= @post.title %>
    <%= @post.body %>
    <%= image_tag @post.get_spot_image(500, 500) %>
  </div>

  <div class="row">
    <% if @post.user == current_user %>
      <%= link_to "編集", edit_post_path(@post), class: "btn btn-outline-success rounded-pill" %>
      <%= link_to "削除", @post, method: :delete, data: { confirm: "投稿を削除してよろしいですか？" }, class: "btn btn-outline-danger rounded-pill" %>
    <% end %>
  </div>

  <div>
    <p>コメント件数：<%= @post.post_comments.count %></p>
    <% @post.post_comments.each do |post_comment| %>
    <p><%= image_tag post_comment.user.get_profile_image(100,100) %></p>
    <%= post_comment.user.username %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
    <% if post_comment.user == current_user %>
      <%= link_to post_post_comment_path(post_comment.post, post_comment), method: :delete, class: "btn btn-outline-danger rounded-pill" do %>
        削除
      <% end %>
    <% end %>
  <% end %>
  </div>
  <div>
  <%= form_with model: [@post, @post_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントする" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>
</div>