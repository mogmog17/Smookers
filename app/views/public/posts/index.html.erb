<div class="container">
  <div class="row">
    <h1 class="mt-4">投稿一覧</h1>
    <table class="table table-hover table-inverse">
      <thead>
        <tr class="table-warning">
          <th>画像</th>
          <th>喫煙スポット</th>
          <th>紹介</th>
          <th>いいね</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% @posts.each do |f| %>
      <tbody>
        <tr>
          <td>
            <%= link_to(f.user) do %>
              <%= image_tag f.get_spot_image(100, 100), class: "rounded-circle" %>
            <% end %>
          </td>
          <td><%= link_to f.title, f %></td>
          <td><%= f.body %></td>
          <td class="favorite-btn-<%= f.id %>"><%= render "public/favorites/favorite-btn", post_data: f %></td>
          <td colspan="3"></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>