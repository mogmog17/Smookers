<div class="container">
  <div class="row">
    <h1 class="mt-4 mb-4">
      <i class="fas fa-file-alt"></i>
      投稿一覧
    </h1>
    <table class="table table-hover table-inverse">
      <thead>
        <tr class="table-warning">
          <th>画像</th>
          <th>喫煙スポット</th>
          <th>レビュー</th>
          <th>コメント</th>
          <th>いいね</th>
        </tr>
      </thead>
      <% @posts.each do |f| %>
      <tbody>
        <tr>
          <td><%= image_tag f.get_spot_image(100, 100) %></td>
          <td><%= link_to f.title, f %></td>
          <td>
            <div id="star-rate<%= f.id %>">
              <script>
                $('#star-rate<%= f.id %>').empty();
                $('#star-rate<%= f.id %>').raty({
                  size: 36,
                  starOff: '<%= asset_path('star-off.png') %>',
                  starOn: '<%= asset_path('star-on.png') %>',
                  half: false,
                  readOnly: true,
                  score: <%= f.star %>
                });
              </script>
            </div>
          </td>
          <td class="comments-count"><%= render "public/post_comments/counter", post_data: f %>件</td>
          <% if user_signed_in? %>
            <td class="favorite-btn-<%= f.id %>"><%= render "public/favorites/favorite-btn", post_data: f %></td>
          <% else %>
            <td>♡<%= f.favorites.count %></td>
          <% end %>
        </tr>
      </tbody>
      <% end %>
    </table>
    <div class="d-flex justify-content-center"><%= paginate @posts %></div>
  </div>
</div>