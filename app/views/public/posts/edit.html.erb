<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h1 class="mt-4 mb-4">
        <i class="fas fa-edit"></i>
        投稿編集
      </h1>
      <%= form_with model: @post do |f| %>
        <%= f.label :"喫煙スポット" %><br>
        <%= f.text_field :title, class: "form-control" %><br>
        <%= f.label :"紹介" %><br>
        <%= f.text_area :body, class: "form-control py-5" %><br>
        <%= f.label :"喫煙スポット画像" %><br>
        <%= f.file_field :spot_image, class: "mb-2" %><br>
        <div class="row mt-3 mb-4">
          <%= f.submit :"更新する", class: "btn btn-outline-success rounded-pill" %>
        </div>
      <% end %>
    </div>
  </div>
</div>