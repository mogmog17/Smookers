<div class="container">
  <div class="row">
    <h1 class="mt-4">投稿編集</h1>
    <%= form_with model: @post do |f| %>
      <%= f.label :"タイトル" %><br>
      <%= f.text_field :title, class: "form-control" %><br>
      <%= f.label :"紹介" %><br>
      <%= f.text_area :body, class: "form-control" %><br>
      <%= f.label :"喫煙スポット画像" %><br>
      <%= f.file_field :spot_image, class: "mb-2" %><br>
      <%= f.submit :"更新する", class: "btn btn-outline-success rounded-pill" %>
    <% end %>
  </div>
</div>