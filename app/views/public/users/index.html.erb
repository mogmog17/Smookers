<div class="container">
  <div class="row">
    <h1 class="mt-4">ユーザー一覧</h1>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>プロフィール画像</th>
          <th>ユーザーネーム</th>
          <th>自己紹介</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% @users.each do |user| %>
      <tbody>
        <tr>
          <td><%= image_tag user.get_profile_image(100, 100), class: "rounded-circle" %></td>
          <td><%= user.username %></td>
          <td><%= user.introduction %></td>
          <td colspan="3"></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>