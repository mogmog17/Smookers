<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-4">
      <h3 class="mt-4 mb-4">プロフィール</h3>
      <%= image_tag @user.get_profile_image(200, 200), class: "rounded-circle" %>
      <table class="table">
        <tbody>
          <tr>
            <th class="col-md-5">ユーザーネーム</th>
            <th><%= @user.username %></th>
          </tr>
          <tr>
            <th>自己紹介</th>
            <th><%= @user.introduction %></th>
          </tr>
          <tr>
            <th>フォロー数</th>
            <th>
              <%= link_to user_followings_path(@user.id) do %>
                <%= @user.followings.count %>
              <% end %>
            </th>
          </tr>
          <tr>
            <th>フォロワー数</th>
            <th>
              <%= link_to user_followers_path(@user.id) do %>
                <%= @user.followers.count %>
              <% end %>
            </th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <% if current_user.following?(@user) %>
          <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-outline-danger rounded-pill" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-outline-primary rounded-pill" %>
        <% end %>
        <div class="offset-1">
          <%= link_to user_favorites_path(@user), class: "btn btn-outline-warning rounded-pill" do %>
            <i class="fas fa-heart"></i>いいね一覧
          <% end %>
        </div>
      </div>

      <% if @user.username != "guestuser" %>
        <div class="mt-3 mb-4">
          <%= link_to user_favorites_path(@user), class: "btn btn-outline-success rounded-pill" do %>
            <i class="fas fa-user-edit"></i>ユーザー情報変更
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="col-md-6 offset-sm-1">
      <h3 class="mt-4 mb-4">投稿履歴</h3>
      <table class="table table-hover table-inverse">
        <thead>
          <tr class="table-warning">
            <th>画像</th>
            <th>喫煙スポット</th>
          </tr>
        </thead>
        <tbody>
          <% @user.posts.each do |f| %>
          <tr>
            <td><%= image_tag f.get_spot_image(100, 100) %></td>
            <td><%= link_to f.title, f %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>