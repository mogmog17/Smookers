<div class="container">
  <div class="row">
    <h1 class="mt-4">ユーザー情報編集</h1>
    <%= form_with model: @user do |f| %>
      <%= f.label :"プロフィール画像" %><br>
      <%= f.file_field :profile_image, class: "mb-2" %><br>
      <%= f.label :"ユーザーネーム" %><br>
      <%= f.text_field :username, class: "form-control" %><br>
      <%= f.label :"自己紹介" %><br>
      <%= f.text_area :introduction, class: "form-control" %><br>

      <% if @user.released? %>
        <%= link_to '非公開にする', user_nonrelease_path(@user), method: :patch, class: "btn btn-outline-primary rounded-pill" %>
      <% else %>
        <%= link_to '公開する', user_release_path(@user), method: :patch, class: "btn btn-outline-danger rounded-pill" %>
      <% end %>

      <%= f.submit "更新する", class: "btn btn-outline-success rounded-pill" %>
    <% end %>
  </div>
</div>