<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h1 class="mt-4 mb-4">
        <i class="fas fa-user-edit"></i>
        ユーザー情報編集
      </h1>
      <%= form_with model: @user do |f| %>
        <%= render 'layouts/errors', obj: @user %>
        <%= f.label :"プロフィール画像" %><br>
        <%= f.file_field :profile_image, class: "mb-2" %><br>
        <%= f.label :"ユーザーネーム" %><br>
        <%= f.text_field :username, class: "form-control" %><br>
        <%= f.label :"自己紹介" %><br>
        <%= f.text_area :introduction, class: "form-control py-5" %><br>

        <div class="row mt-2 mb-4">
          <div class="mr-3">
            <% if @user.released? %>
              <%= link_to '非公開にする', user_nonrelease_path(@user), method: :patch, class: "btn btn-outline-danger rounded-pill" %>
            <% else %>
              <%= link_to '公開する', user_release_path(@user), method: :patch, class: "btn btn-outline-primary rounded-pill" %>
            <% end %>
          </div>
          <%= f.submit "更新する", class: "btn btn-outline-success rounded-pill" %>
        </div>
      <% end %>
    </div>
  </div>
</div>