<div class="container">
  <div class="row">
    <h2 class="mt-4">"<%= @word %>"の検索結果</h2>
    <table class="table table-hover table-inverse">

    <!--検索対象モデルがUserの時 -->

      <% if @range == "ユーザー" %>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(50, 50), class: "rounded-circle" %></td>
              <td>
                <%= link_to(user) do %>
                  <%= user.username %>
                <% end %>
              </td>
              <td><%= user.introduction %></td>
            </tr>
          <% end %>
        </tbody>
      <% else %>

        <!--検索対象モデルがUserではない時(= 検索対象モデルがPostの時) -->

        <tbody>
          <% @posts.each do |f| %>
            <tr>
              <td><%= image_tag f.get_spot_image(100, 100) %></td>
              <td><%= f.title %></td>
              <td>
                <div id="star-rate<%= f.id %>">
                  <script>
                    $('#star-rate<%= f.id %>').empty();
                    $('#star-rate<%= f.id %>').raty({
                      size: 36,
                      starOff: '<%= asset_path('star-off.png') %>',
                      starOn: '<%= asset_path('star-on.png') %>',
                      half: false,
                      readOnly: true,
                      score: <%= f.star %>,
                    });
                  </script>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      <% end %>
    </table>
  </div>
</div>