<table class="table table-hover table-inverse">
  <tbody>
    <% post_data.post_comments.each do |post_comment| %>
      <tr>
        <td>
          <%= link_to post_comment.user do %>
            <%= image_tag post_comment.user.get_profile_image(50,50), class: "rounded-circle" %>
          <% end %>
        </td>
        <td><h5><%= post_comment.user.username %></h5></td>
        <td><%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %></td>
        <td>
          <% if post_comment.user == current_user %>
            <%= link_to post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true, class: "btn btn-outline-danger rounded-pill" do %>
              削除
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>