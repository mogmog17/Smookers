<div class="container">
  <div class="row">
    <% if users.exists? %>
      <% users.each do |user| %>
        <table class="table table-hover table-inverse">
          <thead>
            <tr class="table-warning">
              <th>プロフィール画像</th>
              <th>ユーザーネーム</th>
              <th>フォロー数</th>
              <th>フォロワー数</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= image_tag user.get_profile_image(100, 100), class: "rounded-circle" %></td>
              <td>
                <%= link_to(user) do %>
                  <%= user.username %>
                <% end %>
              </td>
              <td><%= user.followings.count %></td>
              <td><%= user.followers.count %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    <% else %>
      <h4 class="mt-5">ユーザーはいません</h4>
    <% end %>
  </div>
</div>