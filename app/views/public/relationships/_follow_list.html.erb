<div class="container">
  <div class="row">
    <% if users.exists? %>
      <% users.each do |user| %>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <td>
                <%= link_to(user) do %>
                  <%= image_tag user.get_profile_image(100, 100), class: "rounded-circle" %>
                <% end %>
              </td>
              <td>
                <%= link_to(user) do %>
                  <h5><%= user.username %></h5>
                <% end %>
              </td>
              <td><%= user.followings.count %></td>
              <td><%= user.followers.count %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    <% else %>
      <h4 class="mt-5">ユーザーはいません</h4>
    <% end %>
  </div>
</div>