<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h1 class="mt-5 mb-5">
        <i class="fas fa-user-plus"></i>
        新規登録
      </h1>
        <%= form_with model: @user, url: user_registration_path do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="row mb-4">
            <%= f.label :"ユーザーネーム", class: "col-3" %>
            <%= f.text_field :username, class: "col-4" %>
          </div>

          <div class="row mb-4">
            <%= f.label :"メールアドレス", class: "col-3" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-6" %>
          </div>

          <div class="row mb-4">
            <% if @minimum_password_length %>
              <%= f.label :"パスワード(#{ @minimum_password_length }文字以上)", class: "col-3" %>
            <% else %>
              <%= f.label :"パスワード", class: "col-3" %>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "col-4" %>
          </div>

          <div class="row">
            <%= f.label :"パスワードの確認", class: "col-3" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-4" %>
          </div>

          <div class="row mt-5 mb-4">
            <%= f.submit "新規登録", class: "btn btn-outline-success rounded-pill col-5 mx-auto" %>
          </div>
        <% end %>

        <div>
          <h5><%= link_to "ログインはこちら", new_user_session_path %></h5>
        </div>
    </div>
  </div>
</div>
