<header>
  <nav class="navbar navbar-expand-lg navbar-light row" style="background-color: #444444;">

    <% if user_signed_in? %>

      <!--ユーザーがログインしている時 -->

      <ul class="navbar-nav ml-auto">
        <li>
          <%= link_to user_path(current_user), class: "nav-link text-light" do %>
            <i class="fas fa-heart"></i>マイページ
          <% end %>
        </li>
        <li>
          <%= link_to new_post_path, class: "nav-link text-light" do %>
            <i class="fas fa-pencil-alt"></i>新規投稿
          <% end %>
        </li>
        <li>
          <%= link_to users_path, class: "nav-link text-light" do %>
            <i class="fas fa-users"></i>ユーザー一覧
          <% end %>
        </li>
        <li>
          <%= link_to posts_path, class: "nav-link text-light" do %>
            <i class="fas fa-file-alt"></i>投稿一覧
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
            <i class="fas fa-sign-out-alt"></i>ログアウト
          <% end %>
        </li>
      </ul>

    <% elsif admin_signed_in? %>

      <!-- 管理者がログインしている時 -->

      <ul class="navbar-nav ml-auto">
        <li>
          <%= link_to admin_users_path, class: "nav-link text-light" do %>
            <i class="fas fa-users"></i>ユーザー一覧
          <% end %>
        </li>
        <li>
          <%= link_to admin_posts_path, class: "nav-link text-light" do %>
            <i class="fas fa-file-alt"></i>投稿一覧
          <% end %>
        </li>
        <li>
          <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link text-light" do %>
            <i class="fas fa-sign-out-alt"></i>ログアウト
          <% end %>
        </li>
      </ul>
    <% else %>

      <!-- ログインしていない時 -->

      <ul class="navbar-nav ml-auto">
        <li>
          <%= link_to about_path, class: "nav-link text-light" do %>
            <i class="fas fa-smoking"></i>サイト概要
          <% end %>
        </li>
        <li>
          <%= link_to posts_path, class: "nav-link text-light" do %>
            <i class="fas fa-file-alt"></i>投稿一覧
          <% end %>
        </li>
        <li>
          <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
            <i class="fas fa-user-plus"></i>新規登録
          <% end %>
        </li>
        <li>
          <%= link_to new_user_session_path, class: "nav-link text-light" do %>
            <i class="fas fa-user"></i>ログイン
          <% end %>
        </li>
      </ul>
    <% end %>

  </nav>
  <div class="row" style="background-color: #444444;">
    <div class="col mb-2 mr-2">
      <div class="d-flex justify-content-end"><%= render "public/searches/search" %></div>
   </div>
  </div>
</header>
